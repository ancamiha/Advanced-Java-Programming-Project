<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="application-context.xml"/>

    <bean id="sweet1" class="com.api.sweetshop.model.Sweets">
        <constructor-arg name="name" value="Chocolate truffles"/>
        <constructor-arg name="description" value="A chocolate ganache inside with a tempered chocolate coating."/>
        <constructor-arg name="price" value="15"/>
    </bean>

    <bean id="sweet2" class="com.api.sweetshop.model.Sweets">
        <constructor-arg name="name" value="Fondant candies"/>
        <constructor-arg name="description" value="Rolled fondant is made of sugar, water, and corn syrup."/>
        <constructor-arg name="price" value="10"/>
    </bean>

    <bean id="sweet3" class="com.api.sweetshop.model.Sweets">
        <constructor-arg name="name" value="Homemade chocolate"/>
        <constructor-arg name="description" value="Cocoa powder, Butter, sugar, milk, flour"/>
        <constructor-arg name="price" value="8"/>
    </bean>
</beans>